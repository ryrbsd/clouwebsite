<title>创建新密码</title>
<link rel="stylesheet" type="text/css" href="/css/devise.css">

<div class="main">
  <h1>创建新密码</h1>
  <hr class="hr">

  <div class="content">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      
      <div class = "block_left">
        <span class='mytext'>&emsp;新密码&emsp;</span>
        <span class='mytext'>重复密码&emsp;</span>
      </div>
      
      <div class = "block_right">
        <%= f.password_field :password, autocomplete: "off", :class => 'myfield', :placeholder => "密码规则" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'myfield', :placeholder => "重复输入密码" %>
        <%= f.submit "立即修改", :class => 'submit' %>
      </div>

  </div>
  <% end %>

</div>
