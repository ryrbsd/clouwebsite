<%if current_user.role == 'developer' or current_user.role == 'superadmin'%>
    <div class="checkbox">
        <!--<label style="display: block;">-->
        <!--<input value="0" type="checkbox" name="<%=@model_name.underscore%>[Authorized]" id="authorized">-->
        <!--</label>-->
        <label style="display: block;">
            <input name="<%=@model_name.underscore%>[Authorized]" type="hidden" value="0">
