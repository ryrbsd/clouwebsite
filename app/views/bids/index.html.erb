<link rel="stylesheet" type="text/css" href="/css/recuritments.css">
<div class="mainfield container">

  <h5>
    招标信息
  </h5>
  <hr class="hr">
<table class="tg">
  <tr>
    <th class="tg-baqh" style =" width:20%;">截止日期</th>
    <th class="tg-baqh" style =" width:20%;">部门</th>
    <th class="tg-baqh" style =" width:60%;">标题</th>
  </tr>
  <% grey = 1%>
  <% @bids.each do |bid|%>
    <tr>
      <%if grey==1%>
        <%if bid.deadline%>
          <td class="tg-dzk6"><%= bid.deadline.to_date%></td>
        <%else%>
          <td class="tg-dzk6">    </td>
        <%end%>
        <td class="tg-dzk6"><%= bid.department%></td>
        <td class="tg-dzk6"><%= link_to bid.position, bid_path(:id => bid.id)%></td>
        <% grey = 0%>
      <%else%>
        <%if bid.deadline%>
          <td class="tg-dzk6"><%= bid.deadline.to_date%></td>
        <%else%>
          <td class="tg-dzk6">    </td>
        <%end%>
        <td class="tg-dzk6"><%= bid.department%></td>
        <td class="tg-dzk6"><%= link_to bid.position, bid_path(:id => bid.id)%></td>
      <% grey = 1%>
      <%end%>
    </tr>
  <%end%>
</table>
</div>
<script>
    $(document).ready(function () {
        $('#supplier').addClass('act');
    });
</script>
