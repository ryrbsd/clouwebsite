<title>提交投诉</title>
<link rel="stylesheet" type="text/css" href="/css/devise.css">

<div class="main contain">
  <h1>提交投诉</h1>
  <hr class="hr">

  <div class="content">
    <%= form_for @complain do |f| %>
      <% if flash[:notice] %>
        <div class="alert alert-danger">
          <%= flash[:notice] %>
        </div>
      <%end%>
      <%= devise_error_messages! %>
      
      <div class = "block_left">
        <span class='mytext'>&emsp;姓&emsp;名 *&emsp;</span>
        <span class='mytext'>&emsp;E-mail *&emsp;</span>
        <span class='mytext'>手机号码 *&emsp;</span>
        <span class='mytext'>客诉类型 *&emsp;</span>
        <span class='mytext'>投诉内容 *&emsp;</span>
      </div>
      
      <div class = "block_right">
        <%= f.text_field :name, autofocus: true, :class => 'myfield' %>
        <%= f.email_field :email, autofocus: true, :class => 'myfield' %>
        <%= f.text_field :phonenumber, autofocus: true, :class => 'myfield' %>
        <%= select_tag(:complain_type, options_for_select(["商品类", "服务类", "产品类", "其他"]), :class => 'myfield') %>
        <%= f.text_area :text, autofocus: true, :class => 'mycomplain'%>
        <br>
        <%= rucaptcha_input_tag(class: 'form-control', placeholder: '请输入验证码') %>
        <%= rucaptcha_image_tag(alt: 'Captcha') %>
        <br>
        <%= f.submit "提交", :class => 'submit' %>
        <a style="margin-top: 21px; margin-bottom:118px;"></a>
      </div>

  </div>
  <% end %>

</div>
